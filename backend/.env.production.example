# Database (Railway will provide this)
DATABASE_URL="postgresql://..."

# JWT (Generate strong random secrets)
JWT_SECRET="REPLACE_WITH_STRONG_RANDOM_SECRET"
JWT_EXPIRATION="1h"
REFRESH_TOKEN_SECRET="REPLACE_WITH_STRONG_RANDOM_SECRET"
REFRESH_TOKEN_EXPIRATION="7d"

# Email Verification
EMAIL_VERIFICATION_SECRET="REPLACE_WITH_STRONG_RANDOM_SECRET"
EMAIL_VERIFICATION_EXPIRATION="24h"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-production-email@gmail.com"
SMTP_PASSWORD="your-production-app-password"
EMAIL_FROM="noreply@mnuevents.kz"

# Application
NODE_ENV="production"
PORT=3001
CORS_ORIGIN="https://mnu-events.vercel.app"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR="./uploads"
